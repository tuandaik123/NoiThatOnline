
@{
    ViewBag.Title = "addSloganView";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}


@using (Html.BeginForm("addSlogan", "Slogan"))
{
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label for="mota">Nội dung Slogan</label>
                <textarea class="form-control" rows="3" id="mota" name="slogan"></textarea>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}

