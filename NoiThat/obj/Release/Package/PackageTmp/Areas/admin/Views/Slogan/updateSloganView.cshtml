
@{
    ViewBag.Title = "updateSloganView";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

@using (Html.BeginForm("updateSlogan", "Slogan", new { @Model.id }))
{
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label for="mota">Mô Tả</label>
                <textarea class="form-control" rows="3" id="mota" name="slogan">@Model.noi_dung</textarea>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}
