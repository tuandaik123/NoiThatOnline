
@{
    ViewBag.Title = "ViewUpadateCategory";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

@using (Html.BeginForm("update", "Category", new {@Model.id}))
{
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label for="tendm">Tên danh mục cấp 1</label>
                <input type="text" class="form-control" id="tendm" name="tendm" value="@Model.name">
            </div>
            <div class="form-group">
                <label for="mota">Mô Tả</label>
                <textarea class="form-control" rows="3" id="mota" name="mota">@Model.description</textarea>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}

