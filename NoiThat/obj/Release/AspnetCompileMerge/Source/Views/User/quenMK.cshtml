<body>
    <div class="container">
        <h2>Quên mật khẩu</h2>
        @using (Html.BeginForm("ForgotPassword", "User"))
        {
            <div class="input-container">
                <label for="email">Nhập email của bạn:</label>
                <input type="email" id="email" name="email11" required>
                <p style="color:red">@ViewBag.Message</p>
            </div>
            <input type="submit" value="Gửi yêu cầu" class="sm" id="submitBtn">
        }
        <p class="message" id="successMessage" style="display: none;">Một email chứa hướng dẫn khôi phục mật khẩu sẽ được gửi đến bạn.</p>
    </div>

    <script>
        document.getElementById("submitBtn").addEventListener("click", function () {
            // Ẩn nút Gửi yêu cầu sau khi người dùng bấm
            this.style.display = "none";
            // Hiển thị thông báo thành công
            document.getElementById("successMessage").style.display = "block";
        });
    </script>
</body>
